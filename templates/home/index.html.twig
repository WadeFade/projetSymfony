{% extends 'base.html.twig' %}

{% block title %}Calcul dépense soirée{% endblock %}

{% block stylesheets %}
    {# <link rel="stylesheet" href="/public/css/style.css"> #}
{% endblock %}

{% block body %}

    <h1>Calcul dépense soirée</h1>
    <h2>Liste des participants avec leurs dépenses</h2>

    <div class="container-fluid">
        <div class="container-fluid w-75 d-flex justify-content-start mb-3">
            <a class="btn btn-primary m-2" href="{{ path("ajouter_personne") }}" role="button">Ajouter un
                participant</a>

        </div>
        {% for p in data %}
            <div class="container-fluid w-75 d-flex flex-row justify-content-around align-items-center bg-light mb-3">
                <div class="d-flex flex-column pr-5 border-right">
                    <div class="mb-2">{{ p.nom }}</div>
                    <div>{{ p.prenom }}</div>
                </div>
                <div class="d-flex flex-column align-items-center">
                    <div class="mb-2">A dépensé</div>
                    <div>{{ p.depense }} €</div>
                </div>
                <div class="p-2 d-flex flex-column m-2 align-items-center bd-highlight">
                    {% if p.doit > 0 %}
                        <div class="mb-2">Doit donner</div>
                    {% elseif p.doit < 0 %}
                        <div class="mb-2">Doit recevoir</div>
                    {% else %}
                        <div class="mb-2">Doit rien</div>
                    {% endif %}
                    <div>{{ p.doit|abs }} €</div>
                </div>
                {% if p.doit == 0 %}
                    <div class="p-4 bg-success"></div>
                {% else %}
                    <div class="p-4 bg-danger"></div>
                {% endif %}
                <a class="btn p-0 m-0" href="{{ path('supprimer_personne',{'nom':p.nom, 'prenom':p.prenom}) }}"
                   role="button">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-x-square" fill="currentColor"
                         xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                              d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                        <path fill-rule="evenodd"
                              d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                    </svg>
                </a>
            </div>
        {% endfor %}
        {{ dump(list) }}
    </div>


{% endblock %}
